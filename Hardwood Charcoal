        const langIdButton = document.getElementById('lang-id');
        const langEnButton = document.getElementById('lang-en');
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        function setLanguage(lang) {
            document.documentElement.lang = lang;
            // Hero
            document.getElementById('hero-title').textContent = content[lang].heroTitle;
            document.getElementById('hero-subtitle').textContent = content[lang].heroSubtitle;
            document.querySelector('.hero-bg a').textContent = content[lang].heroButton;
            
            // Nav
            document.querySelector('nav a[href="#about"]').textContent = content[lang].navAbout;
            document.querySelector('nav a[href="#specifications"]').textContent = content[lang].navSpecs;
            document.querySelector('nav a[href="#contact"]').textContent = content[lang].navContact;
            // Mobile Nav
            document.querySelector('#mobile-menu a[href="#about"]').textContent = content[lang].navAbout;
            document.querySelector('#mobile-menu a[href="#specifications"]').textContent = content[lang].navSpecs;
            document.querySelector('#mobile-menu a[href="#contact"]').textContent = content[lang].navContact;


            // About
            document.getElementById('about-title').textContent = content[lang].aboutTitle;
            document.getElementById('about-content').textContent = content[lang].aboutContent;
            document.getElementById('advantage-1-title').textContent = content[lang].advantage1Title;
            document.getElementById('advantage-1-desc').textContent = content[lang].advantage1Desc;
            document.getElementById('advantage-2-title').textContent = content[lang].advantage2Title;
            document.getElementById('advantage-2-desc').textContent = content[lang].advantage2Desc;
            document.getElementById('advantage-3-title').textContent = content[lang].advantage3Title;
            document.getElementById('advantage-3-desc').textContent = content[lang].advantage3Desc;

            // Specifications
            document.getElementById('specs-title').textContent = content[lang].specsTitle;
            document.getElementById('spec-raw-material').innerHTML = content[lang].specRawMaterial;
            document.getElementById('spec-carbon').innerHTML = content[lang].specCarbon;
            document.getElementById('spec-moisture').innerHTML = content[lang].specMoisture;
            document.getElementById('spec-size').innerHTML = content[lang].specSize;
            document.getElementById('spec-ash').innerHTML = content[lang].specAsh;

            // Applications
            document.getElementById('applications-title').textContent = content[lang].applicationsTitle;
            document.getElementById('app-1-title').textContent = content[lang].app1Title;
            document.getElementById('app-1-desc').textContent = content[lang].app1Desc;
            document.getElementById('app-2-title').textContent = content[lang].app2Title;
            document.getElementById('app-2-desc').textContent = content[lang].app2Desc;
            document.getElementById('app-3-title').textContent = content[lang].app3Title;
            document.getElementById('app-3-desc').textContent = content[lang].app3Desc;

            // Packaging
            document.getElementById('packaging-title').textContent = content[lang].packagingTitle;
            document.getElementById('pack-1-title').textContent = content[lang].pack1Title;
            document.getElementById('pack-2-title').textContent = content[lang].pack2Title;
            document.getElementById('pack-3-title').textContent = content[lang].pack3Title;
            document.getElementById('pack-3-desc').textContent = content[lang].pack3Desc;

            // Contact
            document.getElementById('contact-title').textContent = content[lang].contactTitle;
            document.getElementById('contact-email').innerHTML = content[lang].contactEmail;
            document.getElementById('contact-phone').innerHTML = content[lang].contactPhone;
            document.getElementById('contact-address-label').innerHTML = content[lang].contactAddressLabel;
            document.getElementById('contact-address').textContent = content[lang].contactAddress;


            if (lang === 'id') {
                langIdButton.classList.add('active');
                langEnButton.classList.remove('active');
                 document.querySelector('#contact a[href^="https://wa.me"]').textContent = "Hubungi via WhatsApp";
            } else {
                langEnButton.classList.add('active');
                langIdButton.classList.remove('active');
                document.querySelector('#contact a[href^="https://wa.me"]').textContent = "Contact via WhatsApp";
            }
        }

        langIdButton.addEventListener('click', () => setLanguage('id'));
        langEnButton.addEventListener('click', () => setLanguage('en'));

        // Toggle mobile menu
        mobileMenuButton.addEventListener('click', () => {
            mobileMenu.classList.toggle('hidden');
        });

        // Set initial language based on browser or default to 'id'
        const userLang = navigator.language.startsWith('en') ? 'en' : 'id';
        setLanguage(userLang);

        // Smooth scroll for navigation links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    // Jika menu mobile terbuka, tutup dulu
                    if (!mobileMenu.classList.contains('hidden')) {
                        mobileMenu.classList.add('hidden');
                    }
                    targetElement.scrollIntoView({
                        behavior: 'smooth'
                    });
                }
            });
        });

    </script>
